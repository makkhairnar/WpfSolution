<Window x:Class="WpfAppDemo.Work.LoginWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDemo.Work"
        mc:Ignorable="d"
        Title="LoginWin" Height="300" Width="300">
    <StackPanel Orientation="Horizontal" Margin="5,5,5,5" >
        <StackPanel Orientation="Vertical" Width="25" >
        </StackPanel>
        
        <StackPanel Orientation="Vertical">
            <Label Margin="0,5,5,5">User Id</Label>
            <Label Margin="0,5,5,5">Password</Label>
            <Button Width="50">Login</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" >
            <TextBox Margin="5,5,5,5" Width="150"  ></TextBox>
            <TextBox Margin="5,5,5,5" Width="150"></TextBox>
            <Button Margin="5,5,0,5" Width="50" >Clear</Button>
        </StackPanel>
    </StackPanel>
</Window>
